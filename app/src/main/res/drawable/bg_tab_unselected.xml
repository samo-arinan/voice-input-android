<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base surface with border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1F26" />
            <stroke android:width="1dp" android:color="#2B323C" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Top highlight -->
    <item android:bottom="0dp" android:left="1dp" android:right="1dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#1AFFFFFF" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>

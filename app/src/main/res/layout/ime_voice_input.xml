<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- タブバー -->
    <LinearLayout
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#111418"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tabVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VOICE"
            android:textSize="10sp"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:elevation="6dp"
            android:background="@drawable/bg_tab_unselected"
            android:textColor="#8B949E"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tabCommand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COMMAND"
            android:textSize="10sp"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:elevation="6dp"
            android:background="@drawable/bg_tab_unselected"
            android:textColor="#8B949E"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/tabInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TMUX"
                android:textSize="10sp"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:padding="8dp"
                android:elevation="6dp"
                android:background="@drawable/bg_tab_unselected"
                android:textColor="#8B949E" />

            <View
                android:id="@+id/tmuxNotificationDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:elevation="8dp"
                android:background="@drawable/dot_filled"
                android:backgroundTint="#4ADE80"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <!-- 区切り線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2B323C" />

    <!-- コンテンツフレーム -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 音声入力モード（デフォルト表示） -->
        <LinearLayout
            android:id="@+id/voiceModeArea"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <!-- Undo strip（入力直後のみ表示） -->
            <LinearLayout
                android:id="@+id/undoStrip"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:background="#1A000000"
                android:visibility="gone">

                <TextView
                    android:id="@+id/undoPreviewText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/undoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="取消"
                    android:textSize="13sp"
                    android:textColor="#26A69A"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- リップルアニメーション -->
            <com.example.voiceinput.RippleAnimationView
                android:id="@+id/rippleView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- TMUXモード（デフォルト非表示） -->
        <com.example.voiceinput.TmuxView
            android:id="@+id/tmuxView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone" />

        <!-- 学習モード（デフォルト非表示） -->
        <com.example.voiceinput.CommandLearningView
            android:id="@+id/commandLearning"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
